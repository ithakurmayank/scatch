<%- include('./partials/header') %>

    <div class="w-full min-h-screen px-20 py-20">

        <!-- Cart Items Section -->
        <div class="flex flex-wrap gap-10 justify-start">
            <% user.cart.forEach((item)=> { %>
                <div class="w-[260px] rounded-md overflow-hidden shadow-md"
                    style="background-color: <%= item.bgcolor %>;">
                    <!-- Product Image -->
                    <div class="w-full h-56 flex items-center justify-center">
                        <img src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>"
                            class="max-h-full object-contain" />
                    </div>

                    <!-- Product Details -->
                    <div class="w-full flex justify-between items-center px-4 py-3"
                        style="background-color: <%= item.panelColor %>;">
                        <h3 class="text-lg font-semibold" style="color: <%= item.textcolor %>;">
                            <%= item.name %>
                        </h3>
                        <div class="flex items-center gap-2">
                            <button
                                class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-add-line"></button>
                            <div class="px-2 py-0.5 rounded-md bg-white text-black text-sm">01</div>
                            <button
                                class="w-6 h-6 bg-white flex rounded-full items-center justify-center ri-subtract-line"></button>
                        </div>
                    </div>

                    <!-- Net Total -->
                    <div class="px-4 py-2 text-sm" style="background-color: <%= item.panelColor %>;">
                        <div class="flex items-center justify-between">
                            <h4>Price</h4>
                            <h2 class="font-medium">₹ <%= item.price %>
                            </h2>
                        </div>
                        <div class="flex items-center justify-between mt-1">
                            <h4>Discount</h4>
                            <h2 class="font-medium text-green-600">
                                - ₹ <%= item.discount %>
                            </h2>
                        </div>
                        <div class="flex items-center justify-between mt-1 border-t border-black/10 pt-1">
                            <h4>Net Total</h4>
                            <h2 class="font-semibold text-gray-800">
                                ₹ <%= item.price - item.discount %>
                            </h2>
                        </div>
                    </div>

                </div>
                <% }) %>
        </div>

        <!-- Price Breakdown Section -->
        <div class="mt-14">
            <h3 class="text-xl font-semibold">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= user.cart.reduce((acc, item)=> acc + item.price, 0) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= user.cart.reduce((acc, item)=> acc + item.discount, 0) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>

            <div class="w-full h-[1px] bg-black mt-10"></div>

            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= finalAmount + 20 %>
                </h3>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>